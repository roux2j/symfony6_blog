{% extends "theme/theme_admin.html.twig" %}

{% block title %}Admin - Modifier cette categorie{% endblock %}

{% block adminContent %}
    <h1 class="text-center my-3 display-5">Modifier les informations de {{tag.name}}</h1>

    <div class="container">
        {{form_start(form)}}
        <div class="mb-3">
            <label for="tag_name">Nom</label>
            <div class="text-danger">{{form_errors(form.name)}}</div>
            {{form_widget(form.name, {'attr': {'class': 'form-control', 'autofocus' :  true }}) }}
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-primary" value="Modifier" formnovalidate>
        </div>
        {{form_end(form)}}
    </div>
{% endblock %}
